set nocompatible
set backspace=2

syntax enable
"let g:solarized_termcolors=256
"colorscheme solarized
set background=light
set relativenumber
set number
highlight LineNr ctermfg=LightGrey
highlight CursorLineNr ctermfg=LightGrey
set showmatch
set ignorecase
set smartcase
set incsearch
set hlsearch
set history=1000
set undolevels=1000

set tabstop=2
set softtabstop=2

set lazyredraw
set wildmenu

set clipboard=unnamed
